name: 🧪 Test {{name}}
on:
  pull_request:
    branches: [main]
    paths: ["{{name}}/**.ts"]
  workflow_run:
    workflows: ["release"]
    types: ["completed"]
  workflow_dispatch:
env:
  HUSKY: 0
jobs:
  preview:
    runs-on: ubuntu-latest
    if: ${{github.event.workflow_run.conclusion != 'success'}}
    steps:
      - uses: actions/checkout@v4
      - uses: pnpm/action-setup@v4
      - uses: actions/setup-node@v4
        with:
          cache: "pnpm"
          node-version-file: ".nvmrc"
      - name: 📦 Installing dependencies
        run: pnpm install
      - name: 🏗️ Build all actions
        run: pnpm run build
      - uses: ./{{name}}
  release:
    runs-on: ubuntu-latest
    if: ${{github.event.workflow_run.conclusion == 'success'}}
    steps:
      - uses: actions/checkout@v4
        with:
          sparse-checkout: |
            .github/scripts
      - uses: actions/setup-node@v4
      - run: npm install @actions/core
      - uses: stephansama/actions/{{name}}@v1
